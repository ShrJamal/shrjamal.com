---
import { Image } from "astro:assets"
import FiverrImg from "~/assets/imgs/fiverr.webp"
import UpworkImg from "~/assets/imgs/upwork.webp"

const experiences = [
  {
    description:
      "Top Rated Plus freelancer on Upwork, worked with more 30+ clients. I have 100% positive reviews on Upwork.",
    company: "Upwork",
    img: UpworkImg,
    alt: "Shrjamal Upwork Profile",
    link: "https://www.upwork.com/freelancers/shrjamal",
    date: "since 2022",
  },
  {
    description: "Level 1 Seller in Fiverr with 100% positive reviews.",
    company: "Fiverr",
    img: FiverrImg,
    alt: "Shrjamal Fiverr Profile",
    link: "https://www.fiverr.com/jamalshr",
    date: "since 2018",
  },
]
---

<section id="experience" class="flex flex-col gap-8 py-20">
  <h2 class="text-5xl font-bold uppercase" style="font-family: 'Syne', sans-serif;">Experience</h2>
  <div class="grid grid-cols-1 gap-12 md:grid-cols-2">
    {
      experiences.map((it) => (
        <a
          class="bg-white border-4 border-black p-6 flex flex-col gap-4"
          style="box-shadow: 8px 8px 0 #000;"
          href={it.link}
          title={it.alt}
          target="_blank"
          rel="noreferrer"
        >
          <Image
            class="w-full border-2 border-black"
            src={it.img}
            alt={it.alt}
            loading="lazy"
          />
          <div class="flex-1 flex flex-col gap-2">
            <h3 class="text-3xl font-bold" style="font-family: 'Syne', sans-serif;">{it.company}</h3>
            <p class="flex-1 font-mono">{it.description}</p>
            <p class="font-mono text-sm text-gray-500">{it.date}</p>
          </div>
        </a>
      ))
    }
  </div>
</section>
