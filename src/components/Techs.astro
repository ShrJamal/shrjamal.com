---
const skills = [
  {
    name: "Languages",
    techs: ["HTML", "CSS", "Javascript", "Typescript", "Dart", "Python"],
  },
  {
    name: "Frontend",
    techs: ["React", "Nextjs", "Astro", "TailwindCSS", "Svelte", "Flutter"],
  },
  {
    name: "Backend",
    techs: [
      "Nodejs",
      "Nestjs",
      "SQL",
      "Redis",
      "Graphql",
      "Supabase",
      "Firebase",
    ],
  },
]
---

<section id="techs" class="flex flex-col gap-8 py-20">
  <h2 class="text-5xl font-bold uppercase" style="font-family: 'Syne', sans-serif;">Tech Stack</h2>
  <div
    class="grid gap-12 w-full"
    style="grid-template-columns: repeat(auto-fill, minmax(18rem, 1fr));"
  >
    {
      skills.map((s) => (
        <div
          class="bg-white border-4 border-black p-6"
          style="box-shadow: 8px 8px 0 #000;"
        >
          <h3 class="text-3xl font-bold mb-4" style="font-family: 'Syne', sans-serif;">{s.name}</h3>
          <ul class="grid grid-cols-2 gap-2">
            {s.techs.map((t) => (
              <li class="font-mono text-lg flex items-center gap-2">
                <span class="text-primary font-bold">&gt;</span>
                <span>{t}</span>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</section>
