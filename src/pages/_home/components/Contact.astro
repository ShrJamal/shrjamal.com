---
export interface Props {
  class?: string
}

const contactInfo = [
  {
    name: "Github",
    url: "https://github.com/shrjamal",
    icon: "icon-[mdi--github]",
  },
  {
    name: "Twitter",
    url: "https://twitter.com/shrjamal",
    icon: "icon-[mdi--twitter]",
  },
  {
    name: "Linkdin",
    url: "https://www.linkedin.com/in/shrjamal",
    icon: "icon-[mdi--linkedin]",
  },
  {
    name: "Telegram",
    url: "https://t.me/jamalshr",
    icon: "icon-[mdi--telegram]",
  },
]
---

<section id="contact" class:list={[Astro.props.class, "flex flex-col gap-1"]}>
  <h2 class="text-xl font-bold text-start">Find me on:</h2>
  <div class="flex items-center gap-2">
    {
      contactInfo.map((it) => (
        <a
          class="bg-glass btn btn-outline btn-sm hover:bg-black"
          href={it.url}
          title={it.name}
          target="_blank"
          rel="noreferrer"
        >
          <span class:list={[it.icon, "text-xl text-white"]} />
          <span>{it.name}</span>
        </a>
      ))
    }
  </div>
</section>
