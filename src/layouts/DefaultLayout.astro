---
import '~/assets/global.css'
import { SEO } from 'astro-seo'

const title = 'Jamal Asahraoui | Shrjamal'
const description =
  'I am Jamal Asahraoui, a FullStack web developer currently living in Morocco. My interests range from programming to entrepreneurship. Check my portfolio.'
const site = 'https://shrjamal.com'
const favicon = '/images/favicon.png'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/images/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <script
      async
      defer
      data-website-id="b59b48d7-8a5e-44ce-9fc5-d3966fb0dbff"
      src="https://analytics.shrjamal.com/umami.js"
    ></script>
    <SEO
      title={title}
      description={description}
      canonical={site}
      titleDefault={title}
      openGraph={{
        image: {
          url: favicon,
          width: 1200,
          height: 630,
          alt: title,
        },
        basic: {
          title,
          type: 'website',
          image: favicon,
          url: site,
        },
      }}
      twitter={{
        creator: '@shrjamal',
        site,
        title,
        description,
        image: favicon,
        imageAlt: title,
      }}
    />
  </head>
  <body class="h-screen flex flex-col text-primary-content">
    <slot />
  </body>
</html>
