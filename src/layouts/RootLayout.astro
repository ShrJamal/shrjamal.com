---
import BaseHead from '../components/BaseHead.astro'
import '~/assets/global.css'

export interface Props {
  class?: string
  title?: string
  description?: string
}

const className = Astro.props.class
---

<html lang="en">
  <BaseHead {...Astro.props} />
  <body
    class:list={['w-screen min-h-svh flex flex-col items-center', className]}
  >
    <slot class="flex-1" />
  </body>
</html>
