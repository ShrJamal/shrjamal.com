{
  "name": "shrjamal.com",
  "description": "My Personal website, https://shrjamal.com",
  "author": "Jamal .S | https://shrjamal.com",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "pages:dev": "wrangler pages dev --proxy 3000 -- astro dev",
    "pages:deploy": "astro build && wrangler pages deploy ./dist",
    "check": "astro check --watch ",
    "format": "prettier -w .",
    "lint": "eslint . --ext .",
    "prepare": "npx simple-git-hooks"
  },
  "dependencies": {
    "astro": "^3.0.3",
    "astro-seo": "^0.8.0",
    "tailwind-merge": "^1.14.0"
  },
  "devDependencies": {
    "@astrojs/partytown": "^2.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "astro-icon": "^0.8.1",
    "daisyui": "^3.6.4",
    "eslint": "^8.48.0",
    "eslint-plugin-astro": "^0.29.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.3.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{html,js,jsx,cjs,mjs,ts,tsx,astro,vue,svelte}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,vue,svelte}": [
      "prettier --write"
    ]
  }
}
